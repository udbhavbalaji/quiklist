{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "paths": {
      "@/*": "src/v1/*"
    },
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*", "bin/**/*"]
}
