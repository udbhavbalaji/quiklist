{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@v1/*": ["src/v1/*"],
      "@v2/*": ["src/v2/*"]
    },
    "exactOptionalPropertyTypes": true
  },
  "include": ["bin/**/*", "src/v2/**/*", "src/globals.d.ts"]
}
